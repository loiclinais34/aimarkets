# ===========================================
# CONFIGURATION AIMARKETS
# ===========================================
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# ===========================================
# BASE DE DONNÉES POSTGRESQL
# ===========================================
# Configuration de la base de données principale
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aimarkets
DB_USER=loiclinais
DB_PASSWORD=MonCoeur1703@
DB_SSL_MODE=prefer
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# URL de connexion complète (générée automatiquement si non fournie)
# DATABASE_URL=postgresql://aimarkets_user:aimarkets_password@localhost:5432/aimarkets

# ===========================================
# REDIS (CACHE)
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=False

# URL de connexion Redis complète
# REDIS_URL=redis://localhost:6379/0

# ===========================================
# API BACKEND
# ===========================================
# Configuration de l'API FastAPI
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=True

# Sécurité
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environnement
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# CORS
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ===========================================
# FRONTEND
# ===========================================
# Configuration Next.js
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=AIMarkets
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# MACHINE LEARNING
# ===========================================
# Configuration des modèles ML
ML_MODELS_PATH=/app/models
ML_MAX_FEATURES=1000
ML_TRAINING_BATCH_SIZE=32
ML_PREDICTION_BATCH_SIZE=100

# Configuration des corrélations
CORRELATION_WINDOW_SIZES=[5, 20, 60]
CORRELATION_METHODS=["pearson", "spearman", "kendall"]

# ===========================================
# INDICATEURS TECHNIQUES
# ===========================================
# Périodes pour les indicateurs techniques
TECHNICAL_SMA_PERIODS=[5, 10, 20, 50, 200]
TECHNICAL_EMA_PERIODS=[5, 10, 20, 50, 200]
TECHNICAL_RSI_PERIOD=14
TECHNICAL_MACD_FAST=12
TECHNICAL_MACD_SLOW=26
TECHNICAL_MACD_SIGNAL=9
TECHNICAL_BOLLINGER_PERIOD=20
TECHNICAL_BOLLINGER_STD=2
TECHNICAL_ATR_PERIOD=14
TECHNICAL_STOCHASTIC_K=14
TECHNICAL_STOCHASTIC_D=3
TECHNICAL_STOCHASTIC_SMOOTH=3

# ===========================================
# ALERTES ET SEUILS
# ===========================================
# Seuils pour les alertes
ALERT_CORRELATION_BREAK=0.7
ALERT_SENTIMENT_EXTREME=0.8
ALERT_VOLUME_SPIKE=2.0
ALERT_PRICE_VOLATILITY=0.05

# Configuration des notifications
NOTIFICATION_EMAIL_ENABLED=False
NOTIFICATION_EMAIL_SMTP_HOST=
NOTIFICATION_EMAIL_SMTP_PORT=587
NOTIFICATION_EMAIL_SMTP_USER=
NOTIFICATION_EMAIL_SMTP_PASSWORD=
NOTIFICATION_EMAIL_FROM=

# ===========================================
# FICHIERS DE DONNÉES
# ===========================================
# Chemins vers les fichiers de données
DATA_HISTORICAL_PATH=/app/data/historical_data.csv
DATA_SENTIMENT_PATH=/app/data/historical_sentiment.csv
DATA_BACKUP_PATH=/app/backups
DATA_EXPORT_PATH=/app/exports

# ===========================================
# MONITORING ET LOGS
# ===========================================
# Configuration des logs
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ===========================================
# DÉVELOPPEMENT
# ===========================================
# Configuration pour le développement
DEV_AUTO_RELOAD=True
DEV_DEBUG_TOOLBAR=True
DEV_PROFILING=False

# Tests
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/aimarkets_test
TEST_REDIS_URL=redis://localhost:6379/1

# ===========================================
# PRODUCTION
# ===========================================
# Configuration pour la production (à modifier selon votre environnement)
# PRODUCTION_DB_HOST=your-production-db-host
# PRODUCTION_DB_PORT=5432
# PRODUCTION_DB_NAME=aimarkets_prod
# PRODUCTION_DB_USER=aimarkets_prod_user
# PRODUCTION_DB_PASSWORD=your-production-password
# PRODUCTION_REDIS_HOST=your-production-redis-host
# PRODUCTION_REDIS_PORT=6379
# PRODUCTION_REDIS_PASSWORD=your-production-redis-password
